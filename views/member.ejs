<html>
<head>
  <% include partials/head %>
</head>

<body class="text-center">
  <div class="cover-container d-flex h-100 p-3 mx-auto flex-column">
    <header class="masthead mb-auto">
      <% include partials/header %>
    </header>

    <main role="main" class="inner cover">
      <div class="list-group">
        <% users.forEach(function(user){ %>
          <div class="list-group-item list-group-item-action" ><%= user.first_name %>(<%= user.email %>)
          </div>


          <div class="btn-group" role="group">
            <!-- No idea if attaching a | seperated data id will work here, need to test -->
            <a href="" class="AddMember btn btn btn-danger" data-id="<%=user._id%>|<%=draw._id%>">Delete</a>
          </div>
          <% }) %>
        </div>

      <%if (modal) { %>
        <div class="alert alert-success" role="alert">
          <%=modalText%>
        </div>
        <% } %>

      </main>
      <footer class="mastfoot mt-auto">
        <div class="inner">
          <% include partials/footer %>
        </div>
      </footer>
    </div>
  </body>
  </html>
